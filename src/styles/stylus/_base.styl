*
  box-sizing border-box
  font-family baseFont
  font-size 100%
  margin 0
  padding 0

a
  text-decoration none

body,
.main-wrapper,
#root
  max-width 100%
  overflow hidden

.main-wrapper
  flex(center, flex-start)
  margin auto
  max-width 90rem
  min-height 100vh
  width 100%
  &.-logout
    justify-content center
    background-color darken(lightGrey, 5%)

ul,
ol,
li
  list-style none

.overlay
  background-color rgba(black, .35)
  bottom 0
  left 0
  position fixed
  right 0
  top 0

.sidebar-wrapper
  width 80%
  +media(tablet)
    width 30%
  +media(desktop)
    width 20rem

.positive-text
  color positive

.form-link
  color primary
  display block
  margin 1rem 0 0
  text-align center
  width 100%
